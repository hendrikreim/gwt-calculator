<?xml version="1.0" encoding="UTF-8" ?>
<configuration>
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<layout class="ch.qos.logback.classic.PatternLayout">
			<pattern>%date{HH:mm:ss.SSS} %-5level [%thread] \(%C.java:%L\) - %msg%n</pattern>
		</layout>
	</appender>

	<logger name="com.example.calculator.server.util.GermanNumeralsParser">
		<level value="info" />
	</logger>

	<root level="info">
		<appender-ref ref="STDOUT" />
	</root>
</configuration>